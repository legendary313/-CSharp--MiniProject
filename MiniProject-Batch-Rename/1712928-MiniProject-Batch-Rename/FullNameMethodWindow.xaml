<Window x:Class="_1712928_MiniProject_Batch_Rename.FullNameMethodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1712928_MiniProject_Batch_Rename"
        mc:Ignorable="d"
        Title="FullNameNormalize" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" Height="169" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Full Name Normalize" Margin="10,10,0,0" Height="30" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="80,0,0,0">
                <RadioButton x:Name="FullNameNormalizeCheck" GroupName="FullNameRadioButton" Content="Set Full Name Normalize" FontSize="20" />
                <RadioButton x:Name="NotSet" IsChecked="True" GroupName="FullNameRadioButton" Content="Do Not Set" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,10,0,0">
                <Button x:Name="FullNameMethodOKButton" IsDefault="True" Content="OK" Width="70" Margin="80,0,50,0" Click="FullNameMethodOKButton_Click"/>
                <Button x:Name="FullNameMethodCancelButton" Content="Cancel" Width="71" Click="FullNameMethodCancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
