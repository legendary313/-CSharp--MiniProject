<Window x:Class="_1712928_MiniProject_Batch_Rename.CatchErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1712928_MiniProject_Batch_Rename"
        mc:Ignorable="d"
        Title="ErrorSolution" Height="220" Width="400" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Height="169" VerticalAlignment="Top">
        <StackPanel>
            <TextBlock Text="Solution for Error Cases" Margin="10,10,0,10" Height="30" FontSize="20"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="80,0,0,0">
            <RadioButton x:Name="AddNumber" GroupName="ErrorCaseRadioButton" Content="Add a number" FontSize="20" />
            <RadioButton x:Name="Skip" GroupName="ErrorCaseRadioButton" Content="Skip" FontSize="20" />
            <RadioButton x:Name="DoNotStart" IsChecked="True" GroupName="ErrorCaseRadioButton" Content="Do Not Start" FontSize="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20,10,0,0">
            <Button x:Name="ErrorCaseMethodOKButton" IsDefault="True" Content="OK" Width="70" Margin="110,0,50,0" Click="ErrorCaseMethodOKButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
