<Window x:Class="_1712928_MiniProject_8_Puzzle.MenuIngame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1712928_MiniProject_8_Puzzle"
        mc:Ignorable="d"
        Title="" Height="200" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Canvas >
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White"/>
                <GradientStop Color="#FF5B3535" Offset="0.961"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Label Canvas.Left="110" Canvas.Top="10" FontSize="40">8 PUZZLE</Label>
        <Button Content="New Game" Name="ImageModeButton" Click="ImageModeButton_Click" Canvas.Left="141" Canvas.Top="76" Width="110"/>
        <Button Content="Continue..." Name="LoadGame" Click="LoadGame_Click" Canvas.Left="141" Canvas.Top="103" Width="110" />
        <Button Content="Exit" Name="ExitButton" Click="ExitButton_Click" Canvas.Left="141" Canvas.Top="128" Width="110"/>
    </Canvas>
</Window>
